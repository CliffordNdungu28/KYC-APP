@using KYC_APP.Data.ViewModels;
@model ProviderManagerViewModel;

@{
    ViewData["Title"] = "KYC APP";
    Layout = "~/Views/Shared/_Layout-2.cshtml";
}


    

    <section class="section">
        <div class="row">
            <div class="col-lg-10">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Service Providers</h5>

                        <!-- Default Tabs -->
                        <ul class="nav nav-tabs" id="myTab" role="tablist">

                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">Document Requests</button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact" type="button" role="tab" aria-controls="contact" aria-selected="false">Service Providers</button>
                            </li>
                        </ul>
                        <div class="tab-content pt-2" id="myTabContent">

                            <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                                <div class="card">
                                    <div class="card-body">
                                 


                                        <div class="list-group">
                                            <div class="row">
                                                <div class="col-md-8">
                                                    <a href="#" class="list-group-item list-group-item-action active" aria-current="true">
                                                        <div class="d-flex w-100 justify-content-between">
                                                            <h5 class="mb-1">Provider: BOC</h5>
                                                            <small>3 days ago</small>
                                                        </div>
                                                        <p class="mb-1">DOCUMENT: PAYSLIP</p>
                                                        <small>Renewal Period: 1 Year</small>
                                                    </a>
                                                </div>
                                                <div class="col-md-4">
                                                    <button type="button" class="btn btn-success btn-sm"><i class="bi bi-folder"></i>UPLOAD</button>

                                                    <button type="button" class="btn btn-success btn-sm">ACCEPT</button>
                                                    <button type="button" class="btn btn-danger btn-sm">DENY</button>

                                                </div>
                                            </div>
                                            <!-- Additional rows -->
                                        </div>
                                        <!-- List group with Advanced Contents -->
                                        <div class="list-group">
                                            
                                            <a href="#" class="list-group-item list-group-item-action">
                                                <div class="d-flex w-100 justify-content-between">
                                                    <h5 class="mb-1">List group item heading</h5>
                                                    <small class="text-muted">3 days ago</small>
                                                </div>
                                                <p class="mb-1">Some placeholder content in a paragraph.</p>
                                                <small class="text-muted">And some muted small print.</small>
                                            </a>
                                            <a href="#" class="list-group-item list-group-item-action">
                                                <div class="d-flex w-100 justify-content-between">
                                                    <h5 class="mb-1">List group item heading</h5>
                                                    <small class="text-muted">3 days ago</small>
                                                </div>
                                                <p class="mb-1">Some placeholder content in a paragraph.</p>
                                                <small class="text-muted">And some muted small print.</small>
                                            </a>
                                        </div><!-- End List group Advanced Content -->

                                    </div>
                                </div>
                                </div>
                            <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Service Provider</th>
                                            <th scope="col">Industry</th>
                                            <th scope="col">KYC Requirements</th>
                                            <th scope="col">Actions</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                          @if (Model.ServiceProvidersAdded != null && Model.ServiceProvidersAdded.Any())
                                    {
                                        @foreach (var serviceProvider in Model.ServiceProvidersAdded)
                                        {
                                            <tr>
                                                <th scope="row">1</th>
                                                <td>@serviceProvider.serviceprovidername</td>
                                                <td>@serviceProvider.Category</td>
                                                <td>
                                                    <button type="button" class="btn btn-info"><i class="bi bi-info-circle" data-bs-toggle="modal" data-bs-target="#largeModal"></i></button>


                                                    <!-- Large Modal -->

                                                    <div class="modal fade" id="largeModal" tabindex="-1">
                                                        <div class="modal-dialog modal-lg">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title">@serviceProvider.serviceprovidername</h5>
                                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                                </div>
                                                                <div class="modal-body">

                                                                    <table class="table">

                                                                        <tbody>
                                                                            <tr>
                                                                                <th scope="row">1</th>
                                                                                <td>Payslip</td>
                                                                                <td>


                                                                                    <button type="button" class="btn btn-success btn-sm"><i class="bi bi-folder"></i>UPLOAD</button>

                                                                                    <button type="button" class="btn btn-success btn-sm">ACCEPT</button>
                                                                                    Accepted


                                                                                </td>

                                                                            </tr>
                                                                        </tbody>
                                                                    </table>


                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>

                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div><!-- End Large Modal-->

                                                </td>
                                                <td>

                                                    <button type="button" class="btn btn-danger"><i class="bi bi-exclamation-octagon"></i></button>
                                                </td>

                                            </tr>
                                        }
                                    }

                                        
                                      
                                       
                                    </tbody>
                                </table>

                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Approved Service Providers</h5>
                                    <p>Search and Add Service Providers</p>

                                    <!-- Table with stripped rows -->
                                    <table class="table datatable">
                                        <thead>
                                            <tr>
                                                <th>
                                                    <b>S</b>ervice Provider
                                                </th>
                                                <th>Industry</th>
                                                <th></th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model.ServiceProvidersAvailable != null && Model.ServiceProvidersAvailable.Any())
                                            {
                                                @foreach (var serviceProvider in Model.ServiceProvidersAvailable)
                                                {
                                                    
                                                    <tr>
                                                        <td>@serviceProvider.ServiceProviderName</td>
                                                        <td>@serviceProvider.Industry</td>
                                                        <td>
                                                            <a class="btn btn-primary btn-sm"
                                                               asp-controller="Portal"
                                                               asp-action="AddServiceProvider"
                                                               asp-route-id="@serviceProvider.id">
                                                                Add
                                                            </a>
                                                        </td>
                                                    </tr>
                                                }

                                            }

                                        </tbody>
                                    </table>
                                    <!-- End Table with stripped rows -->

                                </div>
                            </div>




                            </div>
                        </div><!-- End Default Tabs -->

                    </div>
                </div>





            </div>



        </div>
    </section>
