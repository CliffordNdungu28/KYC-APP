    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
*@
    <!-- Vendor JS Files -->
    <script src="~/portalassets/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="~/portalassets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/portalassets/vendor/chart.js/chart.umd.js"></script>
    <script src="~/portalassets/vendor/echarts/echarts.min.js"></script>
    <script src="~/portalassets/vendor/quill/quill.min.js"></script>
    <script src="~/portalassets/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="~/portalassets/vendor/tinymce/tinymce.min.js"></script>
    <script src="~/portalassets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/portalassets/js/main.js"></script>

  
</body>
</html>
